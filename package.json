  "scripts": {
    "build": "tsup ./src",
    "watch": "tsup ./src --watch",
    "run": "node dist/index.js",
    "dev": "pnpm run watch & nodemon dist/index.js",
    "prettier": "prettier --write src/**",
    "format": "pnpm run prettier && pnpm type",
    "bootstrap": "pnpm install && pnpm format",
    "type": "tsc --noEmit --incremental",
    "tsc:clean": "tsc --build --clean",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "homepage": "https://github.com/idimetrix/use-datetime-countdown#readme",
  "url": "https://github.com/idimetrix/use-datetime-countdown/issue",
  "bugs": {
    "url": "https://github.com/idimetrix/use-datetime-countdown/issues"
  },
  "keywords": [],
  "files": [
    "dist",
    "package.json"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "dependencies": {
    "react": "18.3.1"
  },
  "devDependencies": {
    "@types/node": "22.5.5",
    "@types/jest": "29.5.13",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "nodemon": "3.1.4",
    "prettier": "3.3.3",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsup": "8.3.0",
    "typescript": "5.6.2"
  }
}
